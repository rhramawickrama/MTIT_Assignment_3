<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/aop 
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">

	<aop:aspectj-autoproxy />

	<!-- Definition for database clasess -->
	<bean id="logging" class="com.mtit.logging.Logging" />


	<!-- Definition for service bean -->
	<bean id="service" class="com.mtit.service.Service" />

	<!-- Definition for DB beans -->
	<bean id="database" class="com.mtit.db.Database" />

</beans>